        let a = 5;
        let b = 8;

        function summ (a,b) {
            return a + b;
        }

        function diff (a,b) {
            return a - b;
        }

        function mult (a,b) {
            return a * b;
        }

        function div (a,b) {
            return a / b;
        }


// Задание №6
        function mathOps (arg1, arg2, operation) {
            switch(operation) {
                case 'сложение':
                return arg1 + arg2;
                break;

                case 'вычитание':
                return arg2 - arg2;
                break;

                case 'умножение':
                return arg1 * arg2;
                break;

                case 'деление':
                return arg1 / arg2;
                break;
            }
        }
        
        
